<div class="border rounded w-50 mx-auto">

  <div class="bg-secondary rounded-top">
    <h2 class="text-center p-3 text-light">Inscription</h2> 

  </div>

  <div class="p-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>

    <div class="field form-group">
      <br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mot de passe (6 caractÃ¨res minimum)" %>
    </div>

    <div class="field form-group">
      <br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmation du mot de passe" %>
    </div>

    <div class="actions">
      <br />
      <%= f.submit "Inscription", class: "btn btn-success" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>